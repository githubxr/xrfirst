// 前端编写的 Groovy 脚本字符串
def calcDiscount(item) {
    if (item.goodsNum > 30) {
        return 0.8
    } else if (item.goodsNum > 20) {
        return 0.9
    } else {
        return 1
    }
}

def acNum(json){
    def username = json['0000']['0410']['goodsNum']
    return username
}

def caleShowNum(item){
    if(item.goodsNum>20){
        return true
    } else {
        return false
    }
}

def calcConcat(item) {
    return item.goodsNum+"成功执行groovy计算结果-拼接内容 返回字符串"
}

